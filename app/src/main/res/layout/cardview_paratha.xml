<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="4dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        cardview:cardElevation="3dp"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >

            <ImageView
                android:id="@+id/card_paratha"
                android:layout_width="fill_parent"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:src="@drawable/food1" />

            <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/cardparatha_name"

                android:text="Aloo Paratha + Butter + Dahi"
                android:textSize="12dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="#323232"
                android:layout_height="wrap_content"
               />


                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/cardparatha_desc"
                    android:gravity="center_vertical"
                    android:text="Rs : 50"
                    android:textSize="12dp"
                    android:textColor="#9c9c9c"
                    android:layout_height="wrap_content"
                    />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/cardparatha_fee"
                android:gravity="center_vertical"
                android:text="Rs : 50"
                android:textSize="12dp"
                android:textColor="#f54949"
                android:layout_height="match_parent"
                />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/cardparatha_half_fee"
                    android:gravity="center_vertical"
                    android:text="/ 50"
                    android:textSize="12dp"
                    android:textColor="#f23333"
                    android:layout_height="match_parent"
                    />
</LinearLayout>

        </LinearLayout>
        </LinearLayout>


        

    </android.support.v7.widget.CardView>

</LinearLayout>